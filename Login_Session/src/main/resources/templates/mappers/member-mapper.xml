<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.khmall.mapper.MemberMapper">
	<!-- where에서 가져와야하는 값이 여러개일 경우 Map 
		 parameterType="Map" , "java.util.Map"
	-->
	<select id="getLogin" parameterType="java.util.Map" resultType="com.khmall.dto.Member">
		SELECT * FROM MEMBER
		WHERE MEMBER_NAME = #{member_name}
		AND MEMBER_PHONE = #{member_phone}
	</select>
</mapper>